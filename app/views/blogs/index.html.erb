<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>ユーザー</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
  </tr>
<% end %>
</table>

<%= link_to "新規入力", new_blog_path %>